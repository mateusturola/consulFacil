{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "Components/*": [
        "src/Components/*"
      ],
      "Context/*":[
        "src/Context/*"
      ],
      "Helpers/*":[
        "src/Helpers/*"
      ],
      "Hooks/*":[
        "src/Hooks/*"
      ],
      "Page/*":[
        "src/Page/*"
      ],
      "Types/*":[
        "src/Types/*"
      ],
      "Style/*":[
        "src/Style/*"
      ],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
